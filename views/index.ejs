<script> 

 const flashMessage = document.getElementById('flash-message');
const form = document.getElementById('contact-form');

if (flashMessage && form) {
  //  showFlash
  function showFlash(message, isSuccess = true) {
  flashMessage.textContent = message;
  flashMessage.style.backgroundColor = isSuccess ? '#2ecc71' : '#e74c3c'; // green or red
  flashMessage.style.display = 'block';

  setTimeout(() => {
    flashMessage.style.display = 'none';
  }, 3000); 
}
const form = document.getElementById('contact-form');
form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const data = {
    name: form.name.value,
    email: form.email.value,
    message: form.message.value,
  };

  try {
    const res = await fetch('/send-email', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data),
    });

    const result = await res.json();

    if (result.status === 'success') {
      showFlash('Message sent successfully!', true);
      form.reset();
    } else {
      showFlash(result.message || 'Failed to send message.', false);
    }
  } catch {
    showFlash('Error sending message.', false);
  }
});
}





</script>
 
